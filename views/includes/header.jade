section.page-header-wrapper
	.header-title-wrapper
		a(href='/')
			img.main-logo(src='/i/vnv_logo.png')
		.user-header-wrapper
			.user-quick-menu
				p.breadcrumbs Are not there any >> Exit >>
			.user-menu
				a.main-login-trigger Enter the site&nbsp;&nbsp;
				span or&nbsp;&nbsp;
				a.register-trigger Registration&nbsp;
				span.soc-title Access via:
				a.soc-login-facebook
				a.soc-login-vk
	.main-search-wrapper
		.search-form
			form.form-inline(role="form", main-search)
				input.search-input.form-control(type="text", placeholder='search ...')
				.categories-choice-trigger(unselectable='on') All Categories
				.categories-choice.ng-cloak
					ul.s-categories
						li.s-category(ng-click='categorySelected($event)') All Categories
						li.s-category(ng-repeat='categorie in categories', ng-click='categorySelected($event)') {{ categories }}
				button.btn.btn-default.search-trigger
					span.search-label search
				.clearfix
		.filters-form
			form.form-inline(role="form")
				span.header-text Show only:
				.checkbox
					label.filter-checkbox.header-text
						input(type="checkbox")
						&nbsp;Free deals
				.checkbox
					label.filter-checkbox.header-text
						input(type="checkbox")
						&nbsp;Close to home
.clr