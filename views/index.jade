extends layout

block content
	.home-page 
		.left-column
			.main-categories-wrapper
				.main-categories-menu
					ul.all-categories
						li.all-category.first
							a.ac-link.cat-books(href='javascript:;') Book
						li.all-category
							a.ac-link.cat-pcs(href='javascript:;') Computers
						li.all-category
							a.ac-link.cat-phones(href='javascript:;') Phones, smartphones
						li.all-category
							a.ac-link.cat-technics(href='javascript:;') Technology, Electronics
						li.all-category
							a.ac-link.cat-fasion(href='javascript:;') Fashion & Beauty
						li.all-category
							a.ac-link.cat-cds(href='javascript:;') Disks
						li.all-category
							a.ac-link.cat-home(href='javascript:;') Everything for the home
						li.all-category
							a.ac-link.cat-kids(href='javascript:;') For children
						li.all-category
							a.ac-link.cat-rest(href='javascript:;') Leisure, recreation
						li.all-category
							a.ac-link.cat-collect(href='javascript:;') Collecting
						li.all-category
							a.ac-link.cat-avto(href='javascript:;') Auto, motorcycle
						li.all-category.last
							a.ac-link.cat-other(href='javascript:;') Other
			h5.adv-header advertising:
			.adv-wrapper
				img.adv(src='/i/adv_demo.jpg')
			h3.soc-header We in social networks:
			a.vnv-f(href='https://www.facebook.com/groups/vsenavse/') Facebook
			a.vnv-vk(href='https://vk.com/vsenavse_com_ua') In contact with
		.main-content(ng-controller='indexCtrl')
			.lot-wrapper.ng-cloak(ng-repeat='lot in lots', ng-class='{forth: !(($index+1)%4) && !$first }')
				a.lot-image-link(href='javascript:;', ng-class='{closehome: lot.closeHome, gift: lot.gift}')
					img.lot-image(src='{{ lot.img }}')
				a.lot-link(href='javascript:;') {{ lot.title }}
			.clearfix
			.lots-finish
			h3.latest-exchanges-header Last successful exchanges:
			.exchange-wrapper.ng-cloak(ng-repeat='exchange in exchanges', ng-class='{third: !(($index+1)%3) && !$first }')
				.lot1-wrapper
					a.ex-lot-image-link
						img.ex-lot-image(src='{{ exchange.lot1.img }}')
					a.ex-lot-link(href='javascript:;') {{ exchange.lot1.title }}
				.lot2-wrapper
					a.ex-lot-image-link
						img.ex-lot-image(src='{{ exchange.lot2.img }}')
					a.ex-lot-link(href='javascript:;') {{ exchange.lot2.title }}
		.clearfix
